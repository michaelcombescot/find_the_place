{% extends 'base.html.twig' %}

{% block body %}
    <h1>Media list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Path</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medium in media %}
            <tr>
                <td><a href="{{ path('medium_show', { 'id': medium.id }) }}">{{ medium.id }}</a></td>
                <td>{{ medium.path }}</td>
                <td>
                    <img src='{{ asset(medium.path) }}' alt="test">
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('medium_show', { 'id': medium.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('medium_edit', { 'id': medium.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('medium_new') }}">Create a new medium</a>
        </li>
    </ul>
{% endblock %}

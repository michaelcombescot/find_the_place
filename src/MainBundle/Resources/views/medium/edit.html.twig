{% extends 'base.html.twig' %}

{% block body %}

    {% include 'MainBundle::header.html.twig' %}

    <h1>Medium edit</h1>
    <p>Current Image</p>
    <img src="{{ asset(medium.path) }}" alt="Current Image">
    <p>Change to...</p>
    {{ form_start(edit_form) }}
        {{ form_widget(edit_form.file) }}
        {{ form_errors(edit_form.file) }}
        <img id="newUpload" src="#" alt="your image"/>
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('main_homepage') }}">Homepage</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/main/scripts/displayUploadedImage.js') }}"></script>
{% endblock %}
